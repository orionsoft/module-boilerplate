{
  "name": "module",
  "version": "1.0.1",
  "main": "lib/index.js",
  "repository": "http://github.com/orionsoft/module",
  "author": "nicolaslopezj",
  "license": "MIT",
  "scripts": {
    "build": "babel ./src --out-dir ./lib && yarn run build-styles && yarn run delete-old-files",
    "delete-old-files": "find ./lib -mtime +20s -delete -mindepth 1",
    "build-styles": "find src/ -name '*.less' -exec lessc {} \\; > ./lib/styles.css",
    "prepublish": "yarn run build",
    "test": "yarn run lint && jest",
    "watch": "watch yarn\\ run\\ build ./src",
    "test-watch": "jest --watch",
    "lint": "standard \"src/**/*.js\""
  },
  "devDependencies": {
    "babel-cli": "6.5.1",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^15.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "6.5.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.5.0",
    "eslint": ">=3.0.0",
    "jest-cli": "^15.1.1",
    "less": "^2.7.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.1",
    "react-select": "^1.0.0-rc.2",
    "standard": "*"
  },
  "peerDependencies": {
    "react": "^15.4.1"
  },
  "dependencies": {
    "autobind-decorator": "^1.3.4",
    "lodash": "^4.17.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib"
    ]
  }
}
